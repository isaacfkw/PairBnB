<td>
	<% if @listing.images[0] != nil %>
	<%=image_tag (@listing.images[0].square.url)%>
	<%else%>
	<span>no image</span>
	<%end%>
</td>

<ul>
	<li>Number of guest: <%=@listing.number_of_guest%></li>
	<li>Price: <%=@listing.price%></li>
</ul>


<% if @listing.user_id == current_user.id %>
	<span><%= link_to 'Edit', edit_listing_path %></span>
	<span><%= link_to 'Delete', listing_path, method: :delete, data: {confirm: 'Are you sure about this?'} %></span>
<% end %>


